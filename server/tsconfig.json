{
  "compilerOptions": {
    /* Target & Module settings */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2020"],

    /* File Structure */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Interop & Compatibility */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": false,           /* Helps bypass "implicit any" errors during rapid deployment */
    "skipLibCheck": true,             /* CRITICAL: Ignores type errors in node_modules */
    
    /* Types - Explicitly pointing to Node and Prisma */
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}